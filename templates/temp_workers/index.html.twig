{% extends 'base.html.twig' %}

{% block title %} Intérimaires{% endblock %}

{% block body %}
    <div class="content-header justify-content-between">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="homepage.html">Accueil</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Intérimaires</li>
                </ol>
            </nav>
            <h4 class="content-title content-title-xs">Intérimaires</h4>
        </div>
        <div class="d-none d-sm-flex">
            <a href="" class="btn btn-light"><i data-feather="print" class="svg-14"></i> Imprimer</a>
            <div class="dropdown">
                <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton5" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Import / Export
                </button>
                <div class="dropdown-menu tx-14" aria-labelledby="dropdownMenuButton5" x-placement="bottom-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, 37px, 0px);">
                    <a class="dropdown-item" href="#">Import</a>
                    <a class="dropdown-item" href="#">Export</a>
                </div>
            </div>
            <div class="dropdown">
                <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Saisie
                </button>
                <div class="dropdown-menu tx-14" aria-labelledby="dropdownMenuButton1" x-placement="bottom-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, 37px, 0px);">
                    <a class="dropdown-item" href="{{ path('temp_workers_new') }}">Fiches</a>
                    <a class="dropdown-item" href="form-temporary-worker-hours.html">Heures</a>
                </div>
            </div>
            <div class="dropdown">
                <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Filtre par statut
                </button>
                <div class="dropdown-menu tx-14" aria-labelledby="dropleftMenuButton2" x-placement="left-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(-2px, 0px, 0px);">
                    <a class="dropdown-item" href="#">Actif</a>
                    <a class="dropdown-item" href="#">Inactif</a>
                </div>
            </div>
        </div>
    </div><!-- content-header -->
    <div class="content-body">
        <div class=" no-code">
            <h5 id="section7" class="tx-semibold">Filtre par date</h5>
            <p class="mg-b-25">Sélectionnez la plage de dates à rechercher.</p>

            <div class="row">
                <div class="col-3">
                    <input type="date" id="dateFrom" class="form-control hasDatepicker" placeholder="Du">
                </div><!-- col -->
                <div class="col-3">
                    <input type="date" id="dateTo" class="form-control hasDatepicker" placeholder="Au">
                </div><!-- col -->
            </div><!-- row -->
        </div>
        <div class="card mt-5">
            <div class="card-body">
                <table class="table">
                    <thead class="thead-light">
                    <tr>
                        <th scope="col">Nom</th>
                        <th scope="col">Prénom</th>
                        <th scope="col">Date d'entrée</th>
                        <th scope="col">Société</th>
                        <th scope="col">Etablissement</th>
                        <th scope="col">Catégorie</th>
                        <th scope="col">Fonction</th>
                        <th scope="col">Département</th>
                        <th scope="col">Resp. de service</th>
                        <th scope="col">Date saisie heures</th>
                        <th scope="col">NB heures saisie</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <th scope="row">Dupond</th>
                        <td>Paul</td>
                        <td>13/07/21</td>
                        <td>Biolandes</td>
                        <td>Mt. de Marsan</td>
                        <td> 5 </td>
                        <td>RH</td>
                        <td>Ressources humaines</td>
                        <td>Dupond</td>
                        <td>22/09/21</td>
                        <td>401</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div><!-- content-body -->
{% endblock %}
